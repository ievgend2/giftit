<div class="container mt-5">
  <div class="row">
    <div class="col-md-6 mx-auto">
      <ul class="list-group">
        <li class="list-group-item list-group-item-secondary text-center"><h2>My Conversations</h2></li>
          <% if @conversations.length === 0 %>
            <p class="list-group-item m-0"> Sorry, no conversations have been found.</p>
             <% else %>
             <% @conversations.each do |conversation| %>
                         <% if conversation.sender_id == current_user.id || conversation.recipient_id == current_user.id %>
                           <% if conversation.sender_id == current_user.id %>
                             <% recipient = User.find(conversation.recipient_id) %>
                           <% else %>
                             <% recipient = User.find(conversation.sender_id) %>
                           <% end %>
                         <% end %>
                         <%= link_to ("Message " + recipient.username), conversation_messages_path(conversation), class: "list-group-item no_underscore" %>
                  <% end %>
         <% end %>
      </ul>
    </div>
  </div>
</div>
