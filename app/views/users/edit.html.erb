<h3>Manage Profile</h3>

<%= form_with model: @user do |form| %>
      <br/>Username: <%= form.text_field :username %> <br/>
      <br/>Profile Picture: <%= form.file_field :avatar %> <br/>
      <br/>Email Address: <%= form.text_field :email %> <br/>
      <br/>Password: <%= form.text_field :password, placeholder: "Type here to change" %> <br/>
      <br/><%= form.submit "Update Profile" %>
<% end %>



