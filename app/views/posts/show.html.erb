<div class="container mt-5">
  <div class="row">
    <div class="col-8">
      <h3><%= @post.title %></h3>
      <h6>Category: <%= @post.category.name %></h6>
      <div class="">
      <% if current_user.id == @post.user.id %>
        <div class="authoractions">
          Gift author actions:
            <%= link_to 'Edit', edit_post_path(@post) %> |
            <%= link_to 'Delete Gift', @post, method: :delete, data: {confirm: "Are you sure you want to delete this gift?"} %>
          </div>
        <% end %>

      <div class="converstations text-center">
        <% if current_user.id != @post.user.id %>
            <%= link_to "Message #{@post.user.username}", conversations_path(sender_id: current_user, recipient_id: @post.user_id), method: 'post', class:"btn btn-info mx-auto d-inline" %>
          <% elsif current_user.username == @post.user.username  %>
            <%= link_to "My Conversations", conversations_path %>
          <% else %>
          <%= link_to "Sign up to message #{@post.user.username}", new_user_path %>
        <% end %>
      </div>
      </div>
      <hr>
        <div class="card mb-4 mx-auto shadow rounded col-5" >
        <%= image_tag(@post.image, style: "width:100%") %>
      </div>
      <p><strong>Description:</strong> <%= @post.description %></p>
      <%= link_to 'Back', posts_path, class: "btn btn-info mx-auto d-inline" %>
    </div>



  </div><!-- row -->
</div><!-- container -->
